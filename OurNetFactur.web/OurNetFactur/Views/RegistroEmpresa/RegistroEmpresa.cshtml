
@{
    ViewBag.Title = "RegistroEmpresa";
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width; initial-scale=1.0" />
        <title> Registro de Empresa </title>

        <!--Bootstrap-->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="md-6">
            <div class="container">
                <div class="row">

                    <div class="col-md-12">
                        <div class="col-md-3">
                            <span>
                                <label>
                                    <b>
                                        Registrar Empresa
                                    </b>
                                </label>
                            </span>
                        </div>
                    </div>

                    <hr />

                    <div class="col-md-12">
                        <div class="col-md-3">
                            <img src="~/Content/img/icons/brand.png" alt="Avatar" width="80" class="img-cicle previsualizar">
                            <label for="imagen" class="input-label">
                                <i class="fa fa-cloud-upload"></i>
                                Selecciona una Imagen
                            </label>
                            <input type="file" name="imagen" id="imagen" />
                        </div>

                        <div class="col-md-6">
                            <span><label><b>Razon Social:</b></label></span>
                            <input type="text" class="form-control" id="textrazonsocial" />
                        </div>

                        <div class="col-md-3">
                            <span><label><b>RFC: </b></label></span>
                            <input type="text" class="form-control" id="textrfc" />
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-3">

                        </div>

                        <div class="col-md-4">
                            <span><label><b>Email:</b></label></span>
                            <input type="email" class="form-control" id="textemail" />
                        </div>

                        <div class="col-md-2">
                            <span><label><b>Pais: </b></label></span>
                            <input type="text" class="form-control" id="textpais" value="Mexico" disabled/>
                        </div>

                        <div class="col-md-2">
                            <span><label><b>Moneda: </b></label></span>
                            <select class="form-control" id="slmoneda">
                                <option value="value">text</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-12">

                        <div class="col-md-3">

                        </div>

                        <div class="col-md-9">
                            <span><label><b>Direccion:</b></label></span>
                            <input type="email" class="form-control" id="textdireccion" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
